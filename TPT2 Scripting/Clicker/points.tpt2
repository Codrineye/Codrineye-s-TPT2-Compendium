:import clicker lib
:name {package(points)}

mouse.{click}.down()
key.{click}()

execute(if(\
  {initialisation_check}, \
  "{garbage_requested}", \
  "{package(init)}"\
))
gotoif(99, {initialisation_check} == false)

increment:
{stats.add("points", {stats.get("points per click")})}
gotoif(99, contains("mouse.{click}.down|key.{click}", impulse()))

clicks_per_second:
wait(1.0)
{stats.add("points", {stats.get("points per second")})}
goto(clicks_per_second)
